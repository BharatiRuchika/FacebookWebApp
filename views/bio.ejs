<link rel="stylesheet" href="/css/profile.css">
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2>Add Bio</h2>
            <!-- Form for updating the user's bio -->
            <form action="/api/v1/users/update-bio" method="post">
                <div class="form-group">
                    <label for="bio">Bio:</label>

                    <!-- Textarea for entering the user's bio with placeholder -->
                    <textarea class="form-control" id="bio" name="bio" rows="4" placeholder="Enter your bio" ><%=user.bio %></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
   

