<body>
    <!-- Include header -->
    <%- include('_header') %>
        <div class="facebook-body">
            <!-- Main content -->
            <%- body %>
        </div>

          <!-- Include footer -->
        <%- include('_footer') %>

            <%- script %>
                <script>
        <% if (flash.success && flash.success.length > 0) { %>
                        new Noty({
                            theme: 'relax',
                            text: '<%=flash.success %>',
                            type: 'success',
                            layout: 'topRight',
                            timeout: '1500'
                        }).show()
                        <% }%>

    <% if (flash.error && flash.error.length > 0) { %>
                        new Noty({
                            theme: 'relax',
                            text: '<%=flash.error %>',
                            type: 'error',
                            layout: 'topRight',
                            timeout: '1500'
                        }).show()
                        <% }%>
                </script>

                <!-- External JavaScript libraries -->
                <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                <script src="/js/messageSenderHandler.js"></script>
                <script src="/js/user_profile.js"></script>
                <script src="/js/toggleLikes.js"></script>
                <script src="/js/toggleNoty.js"></script>
                <script src="/js/post.js"></script>
                <script src="/js/layout.js"></script>
                <script src="/js/home.js"></script>
                <script src="/js/friendRequestHandler.js"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.2/socket.io.js"
                    integrity="sha512-zoJXRvW2gC8Z0Xo3lBbao5+AS3g6YWr5ztKqaicua11xHo+AvE1b0lT9ODgrHTmNUxeCw0Ry4BGRYZfXu70weg=="
                    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
                <script src="/js/chat_engine.js"></script>
                <%if(locals.user){console.log('locals.user',locals.user.id,locals.user._id)%>
                    <script>
                            new ChatEngine('user-chat-box', '<%=locals.user.id %>')
                    </script>
                    <%}%>
</body>

</html>